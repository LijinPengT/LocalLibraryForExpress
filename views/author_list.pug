extends layout

block content
    h1= title

    ul
    each author in author_list
        li
            a(href=author.url) #{author.name}
            if author.date_of_birth==null
                | (无法考证)
            else if author.date_of_death==null
                | (#{author.date_of_birth_formatted} - 现在)
            else
                | (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted})
    else
        li There are no authors.